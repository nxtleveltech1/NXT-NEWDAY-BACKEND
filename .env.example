# Backend Environment Configuration Example
# Copy this file to .env.local for development or .env.production for production

# Environment
NODE_ENV=development

# Server Configuration
PORT=4000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nxt_development
DATABASE_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT=5000
DATABASE_IDLE_TIMEOUT=10000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=5000

# Stack Auth Configuration
STACK_PROJECT_ID=your-project-id
STACK_SECRET_KEY=your-secret-key
STACK_PUBLISHABLE_KEY=your-publishable-key

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3
OPENAI_RATE_LIMIT=100

# Security
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key
CORS_ORIGIN=http://localhost:3000
HELMET_CSP_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads
ALLOWED_FILE_TYPES=csv,xlsx,json,xml,pdf

# Monitoring & Logging
LOG_LEVEL=debug
LOG_FORMAT=simple
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=false

# Performance & Scaling
CLUSTER_WORKERS=1
ENABLE_COMPRESSION=true
STATIC_CACHE_MAX_AGE=3600
API_CACHE_TTL=60

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_ADVANCED_CACHING=true
ENABLE_METRICS_COLLECTION=true
# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=4000
HOST=0.0.0.0

# Database Configuration (Neon Postgres Production)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=5000
DATABASE_IDLE_TIMEOUT=10000

# Redis Configuration (Production Cache)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=5000

# Stack Auth Configuration (Production)
NEXT_PUBLIC_STACK_PROJECT_ID=your_project_id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_public_key
STACK_SECRET_SERVER_KEY=your_secret_key

# OpenAI API Configuration (Production)
OPENAI_API_KEY=your_openai_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3
OPENAI_RATE_LIMIT=100

# Security
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key
CORS_ORIGIN=https://nxtdotx.co.za,https://www.nxtdotx.co.za,https://api.nxtdotx.co.za
HELMET_CSP_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=csv,xlsx,json,xml,pdf

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
SENTRY_DSN=

# Performance & Scaling
CLUSTER_WORKERS=auto
ENABLE_COMPRESSION=true
STATIC_CACHE_MAX_AGE=31536000
API_CACHE_TTL=300

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# CDN Configuration
CDN_URL=https://cdn.nxtdotx.co.za
STATIC_ASSETS_URL=https://cdn.nxtdotx.co.za/static

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Alert Configuration
ALERT_EMAIL=alerts@your-domain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_ADVANCED_CACHING=true
ENABLE_METRICS_COLLECTION=true

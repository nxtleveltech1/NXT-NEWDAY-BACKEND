# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=NXTLEVELTECH
MYSQL_USER=nxtextract
MYSQL_PASSWORD=nxtextract123
MYSQL_CONNECTION_LIMIT=20
MYSQL_QUEUE_LIMIT=0
MYSQL_ACQUIRE_TIMEOUT=60000
MYSQL_TIMEOUT=60000
MYSQL_SSL_REJECT_UNAUTHORIZED=false
MYSQL_DEBUG=false
MYSQL_LOGGING=true

# PostgreSQL Configuration (fallback)
DB_HOST_LOCAL=localhost
DB_PORT_LOCAL=5432
DB_NAME_LOCAL=NXTLEVELTECH
DB_USER_LOCAL=postgres
DB_PASSWORD_LOCAL=postgres

# Application Configuration
NODE_ENV=development
PORT=4000
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=.csv,.xlsx,.json,.xml

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
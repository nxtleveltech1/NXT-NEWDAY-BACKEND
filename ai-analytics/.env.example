# AI Analytics Environment Configuration

# Server Configuration
ANALYTICS_PORT=4000
ANALYTICS_HOST=0.0.0.0
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=analytics:

# MongoDB (Optional - for persistent storage)
MONGODB_URL=mongodb://localhost:27017/analytics

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=ai-analytics
JWT_AUDIENCE=analytics-users

# API Key Authentication (Optional)
API_KEY_ENABLED=false
API_KEY_HEADER=X-API-Key
API_KEYS=key1,key2,key3

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Machine Learning Configuration
ML_MODELS_DIR=./models
ML_AUTO_LOAD=true
ML_RETRAINING_ENABLED=true
ML_RETRAINING_INTERVAL=86400000
ML_MIN_ACCURACY=0.8
TF_BACKEND=tensorflow
TF_ENABLE_GPU=false

# Plugin System Configuration
PLUGINS_DIR=./plugins
PLUGINS_AUTO_LOAD=true
PLUGINS_ENABLED=user-behavior,performance,predictive
PLUGINS_DISABLED=

# Plugin-Specific Configuration
# User Behavior Plugin
UB_SESSION_TIMEOUT=1800
UB_TRACKING_ENABLED=true
UB_MIN_SESSION_DURATION=10

# Performance Plugin
PERF_SAMPLING_RATE=1.0
PERF_METRICS_RETENTION=604800000
PERF_REALTIME_ENABLED=true

# Predictive Plugin
PRED_FORECAST_HORIZON=24
PRED_CONFIDENCE_THRESHOLD=0.7
PRED_AUTO_RETRAIN=true

# WebSocket Configuration
WS_ENABLED=true
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_CONNECTIONS=1000
WS_ROOM_MAX_SIZE=100
WS_ROOM_CLEANUP_ENABLED=true
WS_ROOM_CLEANUP_INTERVAL=300000

# Analytics Processing Configuration
ANALYTICS_BATCH_SIZE=100
ANALYTICS_INTERVAL=5000
ANALYTICS_MAX_JOBS=5
ANALYTICS_RETRY_ATTEMPTS=3
ANALYTICS_RETRY_DELAY=1000

# Caching Configuration
ANALYTICS_CACHE_ENABLED=true
ANALYTICS_CACHE_TTL=3600
PREDICTION_CACHE_TTL=1800
METRICS_CACHE_TTL=300

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Alert Configuration
ANALYTICS_ALERTS_ENABLED=true
ALERT_ERROR_RATE=0.05
ALERT_RESPONSE_TIME=2000
ALERT_MEMORY_USAGE=0.8
ALERT_CPU_USAGE=0.8

# Webhook for alerts (optional)
ALERT_WEBHOOK_URL=
ALERT_EMAIL_ENABLED=false
ALERT_SLACK_ENABLED=false

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true

# Monitoring Configuration
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_ENDPOINTS=/health

METRICS_ENABLED=true
METRICS_COLLECT_DEFAULT=true
METRICS_PREFIX=analytics_

ALERTS_ENABLED=true

# Development Configuration
DEBUG=analytics:*
MOCK_DATA_ENABLED=false
HOT_RELOAD_ENABLED=false
PROFILING_ENABLED=false

# Production Configuration
CLUSTER_ENABLED=false
CLUSTER_WORKERS=4
CLUSTER_RESTART_DELAY=5000

COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6

# SSL Configuration (Production)
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt
SSL_CA_PATH=

# Integration Configuration
MAIN_BACKEND_URL=http://localhost:5000
MAIN_BACKEND_API_KEY=
MAIN_BACKEND_TIMEOUT=10000

# Kafka Integration (Optional)
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ai-analytics
KAFKA_ANALYTICS_TOPIC=analytics
KAFKA_INSIGHTS_TOPIC=insights
KAFKA_ALERTS_TOPIC=alerts

# Elasticsearch Integration (Optional)
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ES_ANALYTICS_INDEX=analytics
ES_LOGS_INDEX=logs
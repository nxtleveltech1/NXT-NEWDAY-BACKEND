{
  "name": "user-behavior",
  "version": "1.0.0",
  "description": "Analyzes user behavior patterns, session flows, and interaction data",
  "author": "NXT Analytics Team",
  "type": "analytics",
  "main": "index.js",
  "capabilities": [
    "session-analysis",
    "user-flow-tracking",
    "behavior-prediction",
    "engagement-metrics",
    "funnel-analysis"
  ],
  "dependencies": {
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "config": {
    "sessionTimeout": 1800,
    "trackingEnabled": true,
    "minSessionDuration": 10,
    "funnelSteps": [
      "landing",
      "signup",
      "activation",
      "retention"
    ],
    "behaviorPatterns": {
      "enableClickTracking": true,
      "enableScrollTracking": true,
      "enableFormInteraction": true,
      "enableTimeOnPage": true
    },
    "alerts": {
      "highBounceRate": 0.8,
      "lowEngagement": 0.3,
      "unusualPatterns": true
    }
  },
  "outputs": [
    {
      "name": "session_analysis",
      "description": "Detailed session analysis with duration, pages visited, and actions",
      "schema": {
        "userId": "string",
        "sessionId": "string",
        "duration": "number",
        "pageViews": "number",
        "actions": "array",
        "bounced": "boolean"
      }
    },
    {
      "name": "user_flow",
      "description": "User navigation flow and drop-off points",
      "schema": {
        "flowId": "string",
        "steps": "array",
        "completionRate": "number",
        "dropoffPoints": "array"
      }
    },
    {
      "name": "behavior_insights",
      "description": "AI-generated insights about user behavior patterns",
      "schema": {
        "patterns": "array",
        "anomalies": "array",
        "recommendations": "array",
        "confidence": "number"
      }
    }
  ],
  "events": [
    "user-behavior:session-started",
    "user-behavior:session-ended",
    "user-behavior:pattern-detected",
    "user-behavior:anomaly-found",
    "user-behavior:insight-generated"
  ],
  "metadata": {
    "category": "User Analytics",
    "tags": ["behavior", "sessions", "flows", "engagement"],
    "documentation": "https://docs.nxt-analytics.com/plugins/user-behavior",
    "supportedDataSources": [
      "web-events",
      "mobile-events",
      "api-logs",
      "database-sessions"
    ]
  }
}
{
  "name": "horizon-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --max-old-space-size=1024 --expose-gc cluster.js",
    "start:single": "node --max-old-space-size=2048 --expose-gc index.js",
    "dev": "nodemon --max-old-space-size=1024 --expose-gc cluster.js",
    "dev:single": "nodemon --max-old-space-size=2048 --expose-gc index.js",
    "build": "echo 'Build completed successfully - no build step required for Node.js project'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "cross-env DOTENV_CONFIG_PATH=./.env.production node -r dotenv/config scripts/run-migrations.js",
    "db:migrate:sql": "drizzle-kit generate:sql",
    "db:migrate:kit": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:check": "drizzle-kit check",
    "db:backup": "node -e \"import('./src/db/rollback.js').then(m => m.backupDatabase('manual'))\"",
    "db:checkpoint": "node src/db/migrations/rollback/rollback-procedures.js checkpoint",
    "db:rollback": "node scripts/rollback-migrations.js",
    "db:status": "node -e \"import('./src/db/migrations/rollback/rollback-procedures.js').then(m => m.getCurrentSchemaVersion().then(console.log))\"",
    "db:validate": "node scripts/validate-schema.js",
    "db:rollback-schema": "node -e \"import('./src/db/rollback.js').then(m => m.rollbackMigration('0000_medical_maddog'))\"",
    "db:test-rollback": "node -e \"import('./src/db/rollback.js').then(m => m.testRollback())\"",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src/services/__tests__",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest __tests__/integration",
    "test:performance": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/performance-benchmarks.test.js --maxWorkers=1 --verbose",
    "test:supplier": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=supplier",
    "test:supplier:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=supplier --coverage",
    "test:coverage:report": "node scripts/generate-test-coverage-report.js",
    "import:postgres": "node ../scripts/postgres-import-script.js",
    "import:postgres:dry-run": "node ../scripts/postgres-import-script.js --dry-run",
    "import:postgres:verbose": "node ../scripts/postgres-import-script.js --verbose",
    "import:postgres:skip-permissions": "node ../scripts/postgres-import-script.js --dangerously-skip-permissions",
    "import:postgres:force": "node ../scripts/postgres-import-script.js --dangerously-skip-permissions --continue-on-error --verbose",
    "setup:postgres": "psql -d nxt_newday_db -f ../scripts/postgres-import-setup.sql",
    "websocket:start": "node --max-old-space-size=1024 --expose-gc start-websocket-server.js",
    "websocket:dev": "nodemon --max-old-space-size=1024 --expose-gc start-websocket-server.js",
    "websocket:test": "node -e \"import('./src/websocket-server.js').then(m => m.websocketServer.start())\"",
    "websocket:health": "curl -s http://localhost:4001/health | jq .",
    "websocket:metrics": "curl -s http://localhost:4001/metrics | jq .",
    "websocket:clients": "curl -s http://localhost:4001/clients | jq .",
    "niledb:test": "node -e \"import('./src/config/niledb.config.js').then(m => m.testNileConnection().then(console.log))\"",
    "niledb:init": "node -e \"import('./src/config/niledb.config.js').then(m => m.initializeNileDB().then(console.log))\"",
    "test:niledb": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/niledb-connection.test.js --coverage --verbose",
    "test:niledb-integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src/services/__tests__/niledb-integration.service.test.js --coverage --verbose",
    "test:comprehensive": "node ../run-comprehensive-tests.js",
    "test:coverage-strict": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config=../jest.config.coverage.js --coverage --coverageThreshold='{}' --ci",
    "test:all": "npm run test:niledb && npm run test:unit && npm run test:integration && npm run test:performance",
    "realtime:start": "npm run websocket:start",
    "realtime:dev": "npm run websocket:dev",
    "emergency:websocket": "node --max-old-space-size=1024 --expose-gc start-emergency-websocket.js",
    "emergency:websocket:dev": "nodemon --max-old-space-size=1024 --expose-gc start-emergency-websocket.js",
    "emergency:test": "curl -s http://localhost:4001/emergency-test | jq .",
    "emergency:health": "curl -s http://localhost:4001/health | jq ."
  },
  "dependencies": {
    "@kenjiuno/msgreader": "^1.19.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@woocommerce/woocommerce-rest-api": "^1.0.2",
    "adm-zip": "^0.5.10",
    "argon2": "^0.43.1",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^17.2.0",
    "drizzle-orm": "latest",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^2.1.0",
    "express-static": "^1.2.6",
    "express-validator": "^7.2.1",
    "fast-xml-parser": "^4.3.0",
    "fuzzyset": "^1.0.7",
    "helmet": "^8.1.0",
    "JSONStream": "^1.3.5",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.0",
    "mailparser": "^3.6.5",
    "mammoth": "^1.6.0",
    "mathjs": "^14.5.3",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.10.4",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "openai": "^5.10.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "rate-limiter-flexible": "^7.1.1",
    "redis": "^5.6.0",
    "response-time": "^2.3.4",
    "socket.io": "^4.8.1",
    "tesseract.js": "^5.0.4",
    "ws": "^8.18.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.18.1",
    "esbuild": "^0.25.8",
    "jest": "^30.0.4",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4"
  }
}
